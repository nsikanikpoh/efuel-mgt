<%= form_for([@zone, @zone.stations.build]) do |form| %>
  

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>New Station Form <small>station entry for <%=@zone.name%> </small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <form class="form-horizontal form-label-left input_mask">

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= form.text_field :name, id: :station_name, class:"form-control has-feedback-left", id:"inputSuccess2", placeholder:"Branch Name", type:"text", required:"required"  %>
           
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>

   <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            

    
    <%= form.text_field :address, id: :station_address,  class:"form-control has-feedback-left", placeholder:"Branch Address", type:"text", required:"required" %>
  <span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
          </div>


   <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
    <%= form.label :state, "State" %>
    
    <%= form.text_field :state, id: :station_state,  class:"form-control has-feedback-left", placeholder:"State", type:"text", required:"required" %>
  <span class="fa fa-map form-control-feedback left" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
                <%= form.label :city , "City"%>
              <%= form.text_field :city, id: :station_city , class:"form-control", placeholder:"City", type:"text", required:"required"  %>

            <span class="fa fa-sitemap form-control-feedback right" aria-hidden="true"></span>
          </div>

         
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
               <%= form.submit "Submit", class:"btn btn-info"%>   <%= link_to "Cancel", zone_path(@zone),class:"btn btn-danger"%>


            </div>
          </div>

        </form>
      </div>
    </div>

<% end %>
