<% provide( :title, @stock.station.name+" Stock for - "+@stock.product.name) %>


<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
<%= @stock.product.name %> Stock in <%= @stock.product.station.name %>
</h1>
</div>
<p>
  <strong>Description:</strong>
  <%= @stock.description %>
</p>

<p>
  <strong>Station:</strong>
  <%= @stock.station.name %>
</p>

<p>
  <strong>Tank capacity:</strong>
  <%= @stock.tank_capacity %>
</p>

<p>
  <strong>Product:</strong>
  <%= @stock.product.name %>
</p>

<p>
  <strong>Supplier:</strong>
  <%= @stock.supplier %>
</p>

<p>
  <strong>Cost price:</strong>
  <%= @stock.cost_price %>
</p>

<p>
  <strong>Cost per ltr:</strong>
  <%= @stock.cost_per_ltr %>
</p>

<p>
  <strong>Selling price per ltr:</strong>
  <%= @stock.selling_price_per_ltr %>
</p>


<p>
  <strong>Estimated Sales Price:</strong>
  <%= @stock.estimated_sales_price %>
</p>


<p>
  <strong>Estimate profit percent:</strong>
  <%= @stock.estimate_profit_percent %>
</p>

<p>
  <strong>Estimate profit:</strong>
  <%= @stock.estimate_profit %>
</p>

<%= link_to 'Edit', edit_stock_path(@stock), class:"btn btn-success"%> |
<%= link_to 'Back To Product', product_path(@stock.product), class:"btn btn-info" %>|<%= link_to "Back", :back, class:"btn btn-warning"%>
<br>
<br>
<br>
<% if @stock.stock_tank %>
 <h5>Tank for <%=@stock.description%> Stock for <%= @stock.product.name %> in <%= @stock.station.name %> Station</h5>
 <em>Don't panick about this tank, it is to helps the system tracks when this stock have been sold off.</em>



<table class="table table-striped table-bordered">
  <thead>
    <tr>
      
      <th>Stock Capacity</th>
      <th>Sold Capacity</th>
      <th>Sold Amount</th>
      <th>Cost Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% else %>
There are no stock tank entries generated to this stock yet.
<% end %>


  <tbody>
    
      <tr>
       
        <td><%= @stock.stock_tank.stock_capacity %></td>
        <td><%= @stock.stock_tank.sold_capacity %></td>
        <td><%= @stock.stock_tank.sold_amount %></td>
        <td><%= @stock.stock_tank.cost_price %></td>
        <td><%= link_to 'Goto Stock Tank', @stock.stock_tank, class:"btn btn-success" %></td>
        <td><%= time_ago_in_words(@stock.stock_tank.created_at)%> ago  </td>
      </tr>
   
  </tbody>
</table>
</div>
</div>
</div>
