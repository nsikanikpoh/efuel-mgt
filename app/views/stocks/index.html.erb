<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Station</th>
      <th>Tank capacity</th>
      <th>Product</th>
      <th>Supplier</th>
      <th>Cost price</th>
      <th>Cost per ltr</th>
      <th>Selling price per ltr</th>
      <th>Estimated Sales Price</th>
      <th>Estimate profit percent</th>
      <th>Estimate profit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.description %></td>
        <td><%= stock.station %></td>
        <td><%= stock.tank_capacity %></td>
        <td><%= stock.product %></td>
        <td><%= stock.supplier %></td>
        <td><%= stock.cost_price %></td>
        <td><%= stock.cost_per_ltr %></td>
        <td><%= stock.selling_price_per_ltr %></td>
        <td><%= stock.estimated_sales_price %></td>
        <td><%= stock.estimate_profit_percent %></td>
        <td><%= stock.estimate_profit %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

