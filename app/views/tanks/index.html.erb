<p id="notice"><%= notice %></p>

<h1>Tanks</h1>

<table>
  <thead>
    <tr>
      <th>Station</th>
      <th>Product</th>
      <th>Total capacity</th>
      <th>Used capacity</th>
      <th>Free capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= tank.product.station.name %></td>
        <td><%= tank.product.name %></td>
        <td><%= tank.total_capacity %></td>
        <td><%= tank.used_capacity %></td>
        <td><%= tank.free_capacity %></td>
        <td><%= link_to 'Show', tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

