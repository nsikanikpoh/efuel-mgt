<% provide( :title, current_admin.full_name+" Zonal Managers") %>
<%if current_admin.companyadmin?%>
<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  Zonal Managers Associated you | <%= current_admin.full_name.capitalize %>
</h1>

</div>
<br>
<br>
<br>


   <% if @zonalmanagers.any?%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>Phone</th>
       <th>Zone</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zonalmanagers.each do |zonalmanager| %>
      <tr>
        <td><%= zonalmanager.fname %></td>
        <td><%= zonalmanager.lname %></td>
        <td><%= zonalmanager.address %></td>
        <td><%= zonalmanager.phone %></td>
        <td><%= zonalmanager.zone.name %></td>
        <td><%= zonalmanager.city %></td>
        <td><%= zonalmanager.state %></td>
        <td><%= link_to 'Show', zonalmanager, class:"btn btn-success"  %></td>
        <td><%= link_to 'Edit', edit_zonalmanager_path(zonalmanager), class:"btn btn-success"  %></td>
        <td><%= link_to 'Delete', zonalmanager, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% else%>
 No Zonal Managers Entered Yet

</div>
</div>
</div>


 <%end%>
   <%= link_to 'Dashboard', dashboard_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>

 <%= will_paginate @zonalmanagers, :renderer => BootstrapPagination::Rails %>
  <%else%>
    <h2>Unauthoried access!</h2>
    <p>You are not authorised to view this page.</p>
  <%end%>