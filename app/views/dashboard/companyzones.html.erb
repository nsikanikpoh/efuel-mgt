<% provide( :title, current_admin.company.name+" Zones") %>


<%if current_admin.companyadmin?%>
<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  <%= current_admin.company.name.capitalize %> Zones 
</h1>
<small>seen_only_by <%= current_admin.full_name.capitalize %></small>
</div>
<br>
<br>
<br>

  <% if @zones.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= zone.state %></td>
        <td><%= zone.company.name %></td>
        <td><%= link_to 'Goto', zone, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_zone_path(zone), class:"btn btn-success" %></td>
        <td><%= link_to 'Delete', zone, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% else%>
 No Zonal Managers Entered Yet

</div>
</div>
</div>

 <%end%>
  <%= link_to 'Dashboard', dashboard_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>

 <%= will_paginate @zones, :renderer => BootstrapPagination::Rails %>
  <%else%>
    <h2>Unauthoried access!</h2>
    <p>You are not authorised to view this page.</p>
  <%end%>