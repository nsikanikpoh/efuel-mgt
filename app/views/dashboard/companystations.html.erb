<% provide( :title, current_admin.full_name+" Stations") %>

  <%if current_admin.companyadmin?%>
    
<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  Stations Associated you | <%= current_admin.full_name.capitalize %>
</h1>

</div>
<br>
<br>
<br>
<br>

<% if @stations.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zone</th>
      <th>State</th>
      <th>City</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.address %></td>
        <td><%= station.zone.name %></td>
        <td><%= station.state %></td>
        <td><%= station.city %></td>
        <td><%= station.company.name %></td>
        <td><%= link_to 'Show', station, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_station_path(station), class:"btn btn-info" %></td>
        <td><%= link_to 'Delete', station, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% else%>
 No Stations Entered Yet


</div>
</div>
</div>

 <%end%>

   <%= link_to 'Dashboard', dashboard_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>
    <%= will_paginate @stations, :renderer => BootstrapPagination::Rails %>
  <%else%>
    <h2>Unauthoried access!</h2>
    <p>You are not authorised to view this page.</p>
  <%end%>