<% provide( :title, current_admin.full_name+" Managers") %>

  <%if current_admin.companyadmin?%>
    
<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  Managers Associated you | <%= current_admin.full_name.capitalize %>
</h1>

</div>
<br>
<br>
<br>


 <% if @managers.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
       <th>Address</th>
        <th>Station</th>
      <th>Zone</th>
      <th>Phone</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @managers.each do |admin| %>
      <tr>
        <td><%= admin.fname %></td>
        <td><%= admin.lname %></td>
        <td><%= admin.address %></td>
        <td><%= admin.station.name %></td>
        <td><%= admin.station.zone.name %></td>
        <td><%= admin.phone %></td>
        <td><%= admin.city %></td>
        <td><%= admin.state %></td>
        <td><%= link_to 'Show', admin, class:"btn btn-success"  %></td>
        <td><%= link_to 'Edit', edit_manager_path(admin), class:"btn btn-success"  %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% else%>
 No Managers Entered Yet


</div>
</div>
</div>

 <%end%>

 <%= link_to 'Dashboard', dashboard_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>
  <%= will_paginate @managers, :renderer => BootstrapPagination::Rails %>
  <%else%>
    <h2>Unauthoried access!</h2>
    <p>You are not authorised to view this page.</p>
  <%end%>